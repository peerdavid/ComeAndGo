# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                          @controllers.TimeTrackController.index

# Login
GET     /login                                     @controllers.AuthenticationController.loginForm
POST    /login                                     @org.pac4j.play.CallbackController.callback
GET     /logout                                    @org.pac4j.play.ApplicationLogoutController.logout
POST    /logout                                    @org.pac4j.play.ApplicationLogoutController.logout
GET     /signup                                    @controllers.AuthenticationController.signUp
POST    /signup                                    @controllers.AuthenticationController.doSignUp

GET     /edituser                                  @controllers.UserManagementController.indexEditUser
POST    /edituser                                  @controllers.UserManagementController.editUser
GET     /deleteUser                                @controllers.UserManagementController.deleteUser(userName : String ?= null)

GET     /edittimetracks/:userId                    @controllers.TimeTrackController.editTimeTracks(userId : Int, from : String ?= null, to : String ?= null)
POST    /edittimetracks/:userId                    @controllers.TimeTrackController.saveTimeTrack(userId : Int, from : String ?= null, to : String ?= null)
POST    /edittimetracks/:userId/addtimetrack       @controllers.TimeTrackController.addTimeTrack(userId : Int, from : String ?= null, to : String ?= null)
GET     /edittimetracks/:userId/deletetimetrack    @controllers.TimeTrackController.deleteTimeTrack(timetrackId : Int, userId : Int, from : String ?= null, to : String ?= null)
POST    /edittimetracks/:userId/addbreak/          @controllers.TimeTrackController.addBreak(timetrackId: Int, userId : Int, from : String ?= null, to : String ?= null)
GET     /edittimetracks/:userId/deletebreak/       @controllers.TimeTrackController.deleteBreak(breakid: Int, timetrackId: Int, userId : Int, from : String ?= null, to : String ?= null)


GET     /notification                              @controllers.NotificationController.index
GET     /notification/accept                       @controllers.NotificationController.acceptNotification(notifId : Int)
GET     /notification/reject                       @controllers.NotificationController.rejectNotification(notifId : Int)

# Come & Go
GET     /come                                      @controllers.TimeTrackController.come
GET     /go                                        @controllers.TimeTrackController.go
GET     /pause                                     @controllers.TimeTrackController.pause

# Map static resources _from the /public folder _to the /assets URL path
GET     /assets/*file                              controllers.Assets.at(path="/public", file)

